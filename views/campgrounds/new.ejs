<% include ../partials/header %>

<header class="jumbotron">
    <h1 style="text-align: centre;">Create a new Campgrounds</h1>
</header>

<div class="row">
     <div class="container" style="width: 50%; margin: 0 auto;">
        <form action="/campgrounds" method="post">
            <input class="form-control" type="text" name="name" placeholder="Name of place">
            <input style="margin-top: 20px;" class="form-control" type="text" name="image" placeholder="Image url">
            <input style="margin-top: 20px;" class="form-control" type="text" name="des" placeholder="Description">
            <button style="margin-top: 20px; height: 10%;" class="btn btn-lg btn-primary form-control">Post</button>
        </form>
    </div>
</div>
<div class="row">
     <div class="container" style="width: 50%; margin: 0 auto;">
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

