<% include ../partials/header %>
<header class="jumbotron">
    <div class="conatiner">
<h1>Campgrounds List</h1>
    <p>View our handpicked campgrounds</p>
    <a class="btn btn-primary btn-large" href="/campgrounds/new">ADD new campground</a>
        </div>
</header>

<div class="row align-items-start ">
    <% campgrounds.forEach(function(campgrounds){ %>
    <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
            <img style="height:200px;" src="<%= campgrounds.image %>">
            <centre><div class="caption">
            <h3> <%= campgrounds.name %> </h3>
            </div>
            <p><a href="/campgrounds/<%=campgrounds._id%>" class="btn btn-primary btn-lrg">More Info</a></p>
            </centre>
        </div>
     </div>
<% }); %>
    
</div>
<% include ../partials/footer %>